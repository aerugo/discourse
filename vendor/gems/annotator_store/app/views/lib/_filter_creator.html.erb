<% any = 'Any Creator' %>
<div class="dropdown">
  <div class="dropdown-btn" aria-haspopup="true" role="button" tabindex="0">
    <div class="dropdown-btn-text">
      <%= params[:creator_id].present? ? "Creator: #{User.find(params[:creator_id]).username}" : any %>
    </div>
    <span class="dropdown-arrow"></span>
  </div>

  <div class="dropdown-content">
    <%= link_to any, request.query_parameters.except(:page).merge(creator_id: nil),
                class: (params[:creator_id].present? ? '' : 'active') %>
    <% users.each do |model| %>
      <%= link_to "#{model.username}", request.query_parameters.except(:page).merge(creator_id: model.id),
                  class: (params[:creator_id] == model.id.to_s ? 'active' : '') %>
    <% end %>
  </div>
</div>
